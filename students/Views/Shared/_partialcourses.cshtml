@model IEnumerable<Courses>


    @foreach(var item in Model){
        <div class="col">
    <div class='card shadow ' style='width: 20rem;border:none'>
        <img src='~/images/courses/@item.ImageUrl' style="max-width:100%;min-width:100%;max-height:13rem;min-height:13rem" class='card-img-top' alt='...'>
        <div class='card-body'>
            <h5 class='card-title'>@item.Name</h5>
            <p class='card-text'>@item.category.Name</p>
            <span>@item.Price JD</span><br/>
            <button onclick="AddToCart(@item.Id)" class='btn mt-4 shadow'>Add to cart</button>
            <a asp-action="Details" asp-controller="courses" asp-route-id="@item.Id" class='btn  shadow mt-4'>Details</a>

        </div>
    </div>
    </div>
    }
