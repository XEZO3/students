@model IEnumerable<cartItem>
@foreach(var item in Model){

    <div class="card mb-3">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <div class="d-flex flex-row align-items-center">
                        <div>
                          <img
                            src="~/images/courses/@item.Courses.ImageUrl"
                            class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                        </div>
                        <div class="ms-3">
                          <h5>@item.Courses.Name</h5>
                          
                        </div>
                      </div>
                      <div class="d-flex flex-row align-items-center">
                        
                        <div style="width: 80px;">
                          <h5 class="mb-0">$@item.Courses.Price</h5>
                        </div>
                        <a onclick="RemoveFromCart(@item.CoursesId)" style="color: #cecece;"><i class="fas fa-trash-alt"></i></a>
                      </div>
                    </div>
                  </div>
     
</div>
    
 
}